<ul id='incomplete-todos'>
  <% @incomplete_todos.each do |todo| %>
    <li id="<%= dom_id(todo) %>">
      <%= todo.name %>
      <%= link_to 'complete', todo_completions_path(todo), method: 'post', class: 'complete' %>
    </li>
  <% end %>
</ul>

<%= form_for @todo, :html => {class: 'form-inline'} do |form| %>
  <% @todo.errors.full_messages.each do |message| %>
  <div class='alert alert-error'>
    <strong>Ooops!</strong> <%= message %>
  </div>
  <% end %>
  <%= form.label :name, 'New Task', class: 'obscure' %>
  <%= form.text_field :name, autofocus: 'autofocus' %>
  <%= form.submit 'Add Task', class: 'btn btn-primary' %>
<% end %>

<ul id='complete-todos'>
  <% @complete_todos.each do |todo| %>
    <li id="<%= dom_id(todo) %>">
      <%= todo.name %>
    </li>
  <% end %>
</ul>
